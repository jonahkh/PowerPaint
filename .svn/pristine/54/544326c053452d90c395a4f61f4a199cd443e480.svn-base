package actions;

import java.awt.event.ActionEvent;

import javax.swing.JOptionPane;

/**
 * This class creates the action event for the about menu option.
 *
 * @author Jonah Howard
 * @version 14 November 2015
 */
public class AboutAction extends AbstractPowerPaintAction {

    /** A generated serialization ID. */
    private static final long serialVersionUID = -7818553059841113587L;

    /**
     * Initializes a new about menu option action.
     */
    public AboutAction() {
        super("About...");
    }
    
    /** {@inheritDoc}. */
    @Override
    public void actionPerformed(final ActionEvent theEvent) {
        JOptionPane.showMessageDialog(null,  "TCSS 305 PowerPaint, Autumn 2015", "About",
                                      JOptionPane.PLAIN_MESSAGE);
    }

}
